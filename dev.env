# absolute path INSIDE THE CONTAINER to the WP uploads root
# dev: we mount ./output -> /app/output
# prod: e.g. /var/www/html/wp-content/uploads
WP_UPLOADS_PATH=/app/output

# numeric multisite site/blog id
SITE_ID=30

# path segment (relative to /wp-content/uploads/sites/<SITE_ID>/) we fully control
# keeps us out of WP's date folders
BIB_ROOT=bibliographies

# subfolders under .../sites/<SITE_ID>/<BIB_ROOT>/
PERMALINK_DIR=permalink
HISTORY_DIR=history
